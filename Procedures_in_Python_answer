def update_display():
	print("Your score: " + str(score))
	time.sleep(1)
	print("High score: " + str(high_score))
	time.sleep(1)
	print("Lives remaining: " + str(lives))
	time.sleep(1)

# End of level
update_display()

# Lose a life
update_display()

# New high score
update_display()

# Game over
update_display()
